<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    tools:context=".WithDraw_Balcane">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Student Withdraw or Add Balance"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/w_s_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Serach Student By ID"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange" />

            <Button
                android:id="@+id/w_stu_search_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Search"
                android:textColor="@color/orange" />

            <EditText
                android:id="@+id/w_stu_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Student Id"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange" />
            <EditText
                android:id="@+id/w_stu_bal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Balance"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/w_stu_with_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:padding="5dp"
                    android:text="WithDraw"
                    android:textColor="@color/orange" />

                <Button
                    android:id="@+id/w_stu_add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:padding="5dp"
                    android:text="Add"
                    android:textColor="@color/orange" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>