<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    tools:context=".Student_add_balance">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Add Balance"
                android:textColor="@color/orange"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/stu_acc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Enter Your Account No"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/stu_add_id_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Enter Your Student ID"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/stu_add_bal_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Enter Amount"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/stu_acc_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Add"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>